<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.edu.tarc.madassignment.studentActivity$PlaceholderFragment">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:text="Please be reminded that mid term exam will be held on week 6.\n\nPosted on: 18/11/2017"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:text="Tutorial 5 has been uploaded.\n\nPosted on: 18/11/2017"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:text="All tutorial classes on week 5 will be cancelled.\n\nPosted on: 10/11/2017"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>